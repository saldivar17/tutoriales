<% include partials/header %>

<div class="container mt-5">
	<center><h2> Editar los datos de <%= data.nombre %> </h2></center>
	<div class="row">
		<div class="col-md-3"></div>
		<div class="col-md-6">
			<div class="card">
				<div class="card-body">
					<form action="/edit/<%= data.id %>" method="post">
						<div class="form-group">
							<input type="text" name="nom" value="<%= data.nom %>" placeholder="Name" class="form-control">
						</div>
						<div class="form-group">
							<input type="text" name="apellidos" value="<%= data.apellidos %>" placeholder="Address" class="form-control">
						</div>
						<div class="form-group">
							<input type="text" name="edad" value="<%= data.edad %>" placeholder="Age" class="form-control">
						</div>
						<div class="form-group">
							<button type="submit" class="btn btn-primary">
								Update person
							</button>
						</div>
					</form>
				</div>
			</div>
		</div>
	</div>
</div>

<% include partials/footer %>